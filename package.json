{
  "name": "btc-price-monitor",
  "version": "1.0.0",
  "description": "Real-time BTC price monitoring from multiple exchanges",
  "main": "index.js",
  "engines": {
    "node": ">=24"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "bun run dev:server & bun run dev:ui",
    "dev:server": "bun --hot ./src/server.ts",
    "dev:ui": "vite",
    "lint": "eslint './src' --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "bun run lint --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "@react-hookz/web": "^25.2.0",
    "@solana/web3.js": "^1.98.4",
    "change-case": "^5.4.4",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "primereact": "^10.9.7",
    "primeicons": "^7.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.4.1",
    "sockette": "^2.0.6",
    "throttleit": "^2.1.0",
    "tsx": "^4.20.6",
    "type-fest": "^5.2.0",
    "uuid": "^13.0.0",
    "yahoo-finance2": "^3.10.2"
  },
  "devDependencies": {
    "@cprussin/tsconfig": "^4.0.1",
    "eslint-config-react-yas": "^6.0.6",
    "@types/bun": "^1.3.2",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.22",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-checker": "^0.11.0"
  }
}
